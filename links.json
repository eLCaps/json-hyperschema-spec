{
    "$schema": "http://json-schema.org/draft-06/hyper-schema#",
    "$id": "http://json-schema.org/draft-06/links#",
    "title": "Link Description Object",
    "type": "object",
    "required": [ "href" ],
    "properties": {
        "href": {
            "type": "string",
            "format": "uri-template"
        },
        "hrefSchema": {
            "allOf": [ {"$ref": "#"} ]
        },
        "rel": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "targetSchema": {
            "allOf": [ { "$ref": "hyper-schema#" } ]
        },
        "mediaType": {
            "type": "string"
        },
        "submissionEncType": {
            "type": "string",
            "default": "application/json"
        },
        "submissionSchema": {
            "allOf": [ { "$ref": "hyper-schema#" } ]
        }
    }
}
