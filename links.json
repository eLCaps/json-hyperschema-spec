{
    "$schema": "http://json-schema.org/draft-06/hyper-schema#",
    "$id": "http://json-schema.org/draft-06/links#",
    "title": "Link Description Object",
    "type": "object",
    "required": [ "href" ],
    "properties": {
        "href": {
            "type": "string",
            "format": "uri-template"
        },
        "hrefPointers": {
            "type": "object",
            "additionalProperties": {
                "type": "string",
                "anyOf": [
                    { "format": "json-pointer" },
                    { "pattern": "^[0-9]" }
                ]
            }
        },
        "hrefSchema": {
            "allOf": [
                { "$ref": "http://json-schema.org/draft-06/hyper-schema#" }
            ]
        },
        "rel": {
            "type": "string"
        },
        "anchor": {
            "type": "string",
            "format": "uri-reference"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "targetSchema": {
            "allOf": [
                { "$ref": "http://json-schema.org/draft-06/hyper-schema#" }
            ]
        },
        "targetHints": {
            "description": "JSON representation of likely metadata such as response headers, with a protocol-dependent format"
        },
        "mediaType": {
            "type": "string"
        },
        "submissionEncType": {
            "type": "string",
            "default": "application/json"
        },
        "submissionSchema": {
            "allOf": [
                { "$ref": "http://json-schema.org/draft-06/hyper-schema#" }
            ]
        },
        "$comment": {
            "type": "string"
        }
    }
}
